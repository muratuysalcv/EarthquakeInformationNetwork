@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "~/Views/Account/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/Content/css/register.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/js/registerControl.js"></script>
    <script src="~/Content/js/registerComponents.js"></script>
}
<div class="flex h-center">
    <div class="container">
        <div class="white-box">
            <div class="top-header align-left p15">Kaydol</div>
            <div class="p15">
                <div class="mb15 flex h-stretch-100">
                    <div class="mr7"><form-input valid-type="name" name="name" placeholder="Adınız"></form-input></div>
                    <div class="ml7"><form-input valid-type="surname" name="lastname" placeholder="Soyadınız"></form-input></div>
                </div>
                <div class="mb15"><form-input valid-type="mail" name="email" placeholder="E-Mailiniz"></form-input></div>
                <div class="mb15"><form-input valid-type="password" name="password" placeholder="Yeni Şifreniz"></form-input></div>
                @*<div class="mb10 ml10 fs-14 tx-gray">Doğum Tarihiniz</div>
            <div class="mb15">
                <form-input valid-type="date"></form-input>
            </div>*@
                @*<div class="mb10 ml10 fs-14 tx-gray">Cinsiyetiniz</div>
            <div class="flex h-stretch">
                <input type="radio" class="radio square" name="gender" id="genderMan"><label for="genderMan">Erkek</label>
                <input type="radio" class="radio square" name="gender" id="genderWoman"><label for="genderWoman">Kadın</label>
                <input type="radio" class="radio square" name="gender" id="genderNone" checked><label for="genderNone">Belirmek İstemiyorum</label>
            </div>*@
            </div>
            <div class="info-boxes error mr15 ml15 mb15 none json" id="registerJsonError"></div>
            @Html.Partial("Shared/_StatusPartial")
            <div class="ml15 mr15 tx-gray fs-11 align-center">
                Kaydol butonuna bastığınızda, <a class="link inline">Kullanım Koşullarını</a> ve <a class="link inline">Veri İlkelerimizi</a> kabul etmiş olursunuz.
            </div>
            <div class="align-center p15">
                <button id="register" class="btn btn-main btn-blue spinner">
                    <span class="spinner"></span>Kaydol
                </button>
            </div>
            <div class="line-header align-center pb15">Zaten üye misiniz? <a class="link inline" href="Login">Giriş Yapın</a></div>
        </div>
    </div>
</div>




