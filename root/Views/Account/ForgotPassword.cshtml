
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Account/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/Content/css/setandforgotpassword.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/js/registerComponents.js"></script>
    <script src="~/Content/js/forgotPasswordControl.js"></script>
}
<div class="flex h-center">
    <div class="container">
        <div class="white-box">
            <div class="top-header align-left p15">Şifremi Unuttum</div>
            <div class="fs-14 tx-gray p15 align-center">Şifrenizi yenilemek için e-mailinizi giriniz.</div>
            <div class="pl15 pr15 pb15">
                <form-input valid-type="mail" placeholder="E-Mailiniz" id="mailForgot" name="mailForgot"></form-input>
            </div>
            <div class="info-boxes mr15 ml15 mb15 none json" id="forgotJsonInfo"></div>
            @Html.Partial("Shared/_StatusPartial")
            <div class="align-center pb15">
                <button class="btn btn-main btn-blue spinner" id="forgot">
                    <span class="spinner"></span>
                    Gönder
                </button>
            </div>
        </div>
    </div>
</div>