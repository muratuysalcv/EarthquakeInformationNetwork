
@{
    ViewBag.Title = "RequestSent";
    Layout = "~/Views/Home/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Content/css/requestsent.css" rel="stylesheet" />
}
<h2>RequestSent</h2>

<div class="flex h-center">
    <div class="container">
        <div class="white-box p15 align-center">
