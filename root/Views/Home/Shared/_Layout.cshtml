<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/052e4ba982.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    @RenderSection("styles", required: false)
</head>
<body>
    <script>
        function ConvertDate(value) {
            var pattern = /Date\(([^)]+)/
            var results = pattern.exec(value);
            var dt = new Date(parseFloat(results[1]));
            return (dt.getDate() < 10 ? '0' : '') + dt.getDate() + "/" + (dt.getMonth() + 1 < 10 ? '0' : '') + (dt.getMonth() + 1) + "/" + dt.getFullYear() + " " + (dt.getHours() + 1 < 10 ? '0' : '') + dt.getHours() + ":" + (dt.getMinutes() + 1 < 10 ? '0' : '') + dt.getMinutes();
        }
    </script>

    <div class="navbar">
        <div class="flex v-center"><a class="brand">DEPREMSİZ HAYAT</a></div>
        <div class="menu">
            <a class="link menu-link" href="/Home/Index">Yeni Talep Gönder</a>
            <a class="link menu-link" href="/Home/MyRequests">Taleplerim</a>
            <div class="mobile-profile">
                <div class="b"><a class="link nameSurnameJson" href="EditProfile">@{Html.RenderAction("Name", "Home");} @{Html.RenderAction("Surname", "Home");}</a></div>
                <div><a class="link bg-red tx-white b fs-11 p5" href="/Account/LogOut">Çıkış Yap</a></div>
            </div>
        </div>
        <div class="profile">
            <div><span class="nameSurnameJson">@{Html.RenderAction("Name", "Home");} @{Html.RenderAction("Surname", "Home");}</span> <i class="fas fa-chevron-down fs-10"></i></div>
        </div>
        <div class="profil-box-open align-right">
            <a class="link p5 tx-gray fs-11 b m5 hover br5" href="/Home/EditProfile">Profili Düzenle</a>
            <a class="link tx-red b fs-11 p5 m5 hover br5" href="/Account/LogOut">Çıkış Yap</a>
        </div>
        <button class="btn toggle">
            <i class="fas fa-bars"></i>
        </button>
    </div>
    @RenderBody()
    <script src="~/Content/js/main.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
