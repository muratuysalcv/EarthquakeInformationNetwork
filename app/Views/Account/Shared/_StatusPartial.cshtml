@{ var response = ViewBag.Response;
    if (response != null)
    {
        if (response.Message != null && response.Message.Count > 0)
        {
            if (response.Status)
            {
                <div class="info-boxes success ml15 mr15 mb15">
                    @for (int i = 0; i < response.Message.Count; i++)
                    {
                        <div>@response.Message[i]</div>
                    }
                </div>
            }
            else
            {
                <div class="info-boxes error ml15 mr15 mb15">
                    @for (int i = 0; i < response.Message.Count; i++)
                    {
                        <div>@response.Message[i]</div>
                    }
                </div>
            }
        }
    }
}